.container {
  display: flex;
  flex-direction: column;
}

.head-image {
  width: 100%;
  height: 600rpx;
  margin: auto 0;
}

.audio {
  width: 110rpx;
  height: 110rpx;
  position: absolute;
  /*居中经典方式*/
  left: 50%;
  margin-left: -51rpx;
  top: 270rpx;
  opacity: 0.6;
}

.author-data {
  flex-direction: row;
  margin-left: 30rpx;
  margin-top: 20rpx;
}

.avatar {
  width: 64rpx;
  height: 64rpx;
  vertical-align: middle;
}

.author-name {
  font-size: 30rpx;
  font-weight: 600;
  margin-left: 20rpx;
  vertical-align: middle;
  color: #666;
}

.author-send {
  font-size: 30rpx;
  margin-left: 20rpx;
  color: #999;
}

.author-time {
  font-size: 24rpx;
  margin-left: 20rpx;
  color: #999;
  vertical-align: middle;
}

.content-title {
  margin-left: 40rpx;
  font-size: 36rpx;
  font-weight: 700;
  margin-top: 30rpx;
  letter-spacing: 2px;
  color: #4b556c;
}

.tool {
  margin-top: 20rpx;
}

.circle-image {
  float: right;
  margin-right: 40rpx;
  vertical-align: middle;
}

.circle-image image {
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
  margin-left: 8px;
}

.image-share {
  margin-left: 30rpx;
}

.horizon {
  width: 660rpx;
  height: 2rpx;
  background-color: #e5e5e5;
  vertical-align: middle;
  position: relative;
  top: 23rpx;
  margin:  0 auto;
  z-index: -99;
}

.detail {
  color: #666;
  font-size: 30rpx;
  margin-left: 30rpx;
  margin-top: 20rpx;
  margin-right: 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
}